# Brazilian Soccer MCP Server - Environment Configuration
# Copy this file to .env and update with your actual values

# ============================================================================
# NEO4J DATABASE CONFIGURATION
# ============================================================================

# Neo4j connection URI (Bolt protocol)
NEO4J_URI=bolt://localhost:7687

# Neo4j authentication
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# Neo4j database name
NEO4J_DATABASE=brazil-kg

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# MCP server name identifier
NEO4J_SERVER_NAME=brazilian-soccer-mcp

# Logging level (DEBUG, INFO, WARNING, ERROR)
NEO4J_LOG_LEVEL=INFO

# ============================================================================
# QUERY CONFIGURATION
# ============================================================================

# Maximum number of results to return from queries
NEO4J_MAX_RESULTS=100

# Query timeout in seconds
NEO4J_QUERY_TIMEOUT=30

# ============================================================================
# CACHE CONFIGURATION (Future Enhancement)
# ============================================================================

# Enable result caching
NEO4J_ENABLE_CACHE=false

# Cache time-to-live in seconds
NEO4J_CACHE_TTL=300

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Set to 'development' or 'production'
ENVIRONMENT=development

# Enable debug mode (more verbose logging)
DEBUG=false
